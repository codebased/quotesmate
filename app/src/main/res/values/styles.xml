<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>


    <style name="quotes">

    </style>


    <style name="h1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_90</item>
    </style>

    <style name="h2">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_90</item>
    </style>

    <style name="quotes.heading">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_90</item>
    </style>

    <style name="quotes.subheading">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_70</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary_dark</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="textInputStyle" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/primary</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/primary</item>
        <item name="colorControlNormal">@color/primary</item>
        <item name="colorControlActivated">@color/primary_dark</item>
        <item name="android:textColorHighlight">@color/primary</item>

    </style>


</resources>
