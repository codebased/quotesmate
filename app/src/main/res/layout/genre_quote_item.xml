<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:padding="@dimen/onedot">

    <ImageView
        android:id="@+id/leftImageView"
        android:layout_width="@dimen/left_image_width"
        android:layout_height="@dimen/left_image_height"
        android:layout_gravity="center"
        android:layout_margin="@dimen/twodot"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_heart"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/twodot"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/headerView"
            style="@style/h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="hey this is a heading"/>


        <TextView
            android:id="@+id/subHeaderView"
            style="@style/quotes.subheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/onedot"
            android:text="hey this is a subheading"/>

    </LinearLayout>
</LinearLayout>
