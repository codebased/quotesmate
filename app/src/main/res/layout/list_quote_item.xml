<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="1dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:layout_marginStart="1dp"
    android:layout_marginTop="2dp"
    android:background="@color/white"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="@dimen/onedot"
    card_view:cardMaxElevation="@dimen/onedot"
    card_view:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/headerView"
            style="@style/h1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/onedot"
            android:text="hey this is a heading" />

        <TextView
            android:id="@+id/subHeaderView"
            style="@style/quotes.subheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headerView"
            android:layout_margin="@dimen/onedot"
            android:gravity="center_horizontal"
            android:text="hey this is a subheading" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/divider"
            android:orientation="horizontal"
            android:paddingTop="1dp"
            android:weightSum="2">

            <ImageView
                android:id="@+id/leftImageView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#eae8e8"
                android:gravity="center"
                android:paddingBottom="@dimen/onedot"
                android:paddingTop="@dimen/onedot"
                android:src="@drawable/ic_favourite"
                android:textColor="@color/black_70" />

            <ImageView
                android:id="@+id/rightImageView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_weight="1"
                android:background="#eae8e8"
                android:gravity="center"
                android:paddingBottom="@dimen/onedot"
                android:paddingTop="@dimen/onedot"
                android:src="@drawable/ic_share"
                android:textColor="@color/black_70" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>