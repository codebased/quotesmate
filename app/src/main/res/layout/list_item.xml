<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    android:paddingTop="@dimen/twodot">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/twodot"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="@dimen/onedot">

        <ImageView
            android:id="@+id/leftImageView"
            android:layout_width="@dimen/left_image_width"
            android:layout_height="@dimen/left_image_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/twodot"
            android:background="@drawable/myphoto"
            android:scaleType="centerCrop"
            android:src="@drawable/trans_circle" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:paddingLeft="@dimen/onedot">

            <TextView
                android:id="@+id/headerView"
                style="@style/quotes.heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hey this is a heading" />


            <TextView
                android:id="@+id/subHeaderView"
                style="@style/quotes.subheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="8dp"
                android:text="hey this is a subheading" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>